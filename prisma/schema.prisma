generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  image     String?
  role      UserRole @default(CUSTOMER)
  orders    Order[]
  createdAt DateTime @default(now())
}

enum UserRole {
  ADMIN
  CUSTOMER
}

model Product {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  price       Int      // in paise (INR)
  images      String[]
  inStock     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  items        Json
  amount       Int
  status       OrderStatus @default(PENDING)
  verified     Boolean     @default(false)
  trackingNo   String?
  createdAt    DateTime    @default(now())
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  COMPLETED
  CANCELLED
}
